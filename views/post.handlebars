 <div class="postCard">
  <div class="postTitle">
    <a class="postbox""> <h1>{{post.title}}</h1></a>
     <p class="postbox"class="creator">posted by {{post.user.user_name}} on {{post.createdAt}}</p>
  </div>  
  <div class="postBody">
    <p class="postContent">
      {{post.content}}
    </p>
  </div>
</div>

<h2>Comments</h1>
<div>
  <form action="/comment/new" method="post">
  <textarea name="body" id="newComment" placeholder="Write a new comment here"></textarea>
  
  <button class="button" type="submit">Submit</button>

  </form></div>

<section> 
{{#each post.comments as |comment|}}    
 <div class="commentCard">
        <p class="postbox commentHead"class="creator">posted by {{comment.user.user_name}} on {{format_date comment.createdAt}}</p>
        <div class="postBody">
           <p class="postContent">{{comment.body}}</p>
        </div>
</div>

{{/each}}
</section>

